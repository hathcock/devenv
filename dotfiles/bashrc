export TERM="xterm-256color"

shopt -s checkwinsize
shopt -s expand_aliases

# Enable history appending instead of overwriting.  #139609
shopt -s histappend

# Default bash completion (ubuntu 18.04)
if ! shopt -oq posix; then
  if [ -f /usr/share/bash-completion/bash_completion ]; then
    . /usr/share/bash-completion/bash_completion
  elif [ -f /etc/bash_completion ]; then
    . /etc/bash_completion
  fi
fi

#
# General Aliases
#

alias ls='ls --color=yes'
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

#
# Git Aliases
#

alias gs="git status"
alias gd="git diff"
alias gc="git commit"
alias gl="git log --oneline --pretty --graph"

#
# Custom Tools
#

add_path() {
  export PATH="$1":$PATH
}

THIRD=${HOME}/third_party
add_path ${THIRD}/ripgrep-0.10.0-x86_64-unknown-linux-musl

#
# Custom Prompt
#

generate_prompt() {
  export PS1=$(${HOME}/styx/prompt/build/deployed $?)
}
PROMPT_COMMAND=generate_prompt

#
# Other Utils
#

[ -f ~/.fzf.bash ] && source ~/.fzf.bash
source ${THIRD}/.pyenv/bin/activate
export LD_LIBRARY_PATH=$THIRD/cpython-3.7.1/build/lib
