"
"   plugins with vim-plug
"

call plug#begin('~/.vim/plugged')

Plug 'tpope/vim-sensible'
Plug 'tpope/vim-fugitive'
Plug 'christoomey/vim-tmux-navigator'
Plug 'benmills/vimux'
Plug 'junegunn/fzf', { 'dir': '~/.fzf', 'do': './install --all' }
Plug 'junegunn/fzf.vim'
Plug 'Valloric/YouCompleteMe'
Plug 'ambv/black'
Plug 'rust-lang/rust.vim'
Plug 'rhysd/vim-clang-format'
Plug 'owickstrom/vim-colors-paramount'
Plug 'fxn/vim-monochrome'
Plug 'itchyny/lightline.vim'
Plug 'arcticicestudio/nord-vim'

call plug#end()

"
"   basic settings
"

set t_Co=256
syntax on
set number
set ts=2
set shiftwidth=2
set expandtab
set autoindent
set smartindent
set noswapfile
set nobackup
set showmatch
set hlsearch
set incsearch
set mouse=c
set title
set laststatus=2
set backspace=indent,eol,start
set lazyredraw

"
"   colorscheme
"

let g:nord_cursor_line_number_background = 1
set noshowmode
let g:lightline = {
      \ 'colorscheme': 'nord',
      \ }
set background=dark
colorscheme nord

"
"   filetype behavior
"

filetype plugin indent on

au BufRead,BufNewFile *.sv set filetype=verilog
au BufRead,BufNewFile *.svh set filetype=verilog
au BufRead,BufNewFile *.vh set filetype=verilog
au! FileType verilog setl nosmartindent

au! FileType python setl nosmartindent
au! FileType python setl sw=4
autocmd BufWritePre *.py execute ':Black'

"
"   vimux
"

map <leader>rx :VimuxPromptCommand<CR>
map <leader>rr :VimuxRunLastCommand<CR>

"
"   you complete me
"

set completeopt-=preview
let g:clang_format#detect_style_file = 1
let g:rustfmt_autosave = 1
autocmd FileType c ClangFormatAutoEnable
autocmd FileType cpp ClangFormatAutoEnable
